{# templates/admin/dashboard.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}Dashboard Admin{% endblock %}

{% block body %}
<div class="container py-4">

  {% if is_granted('ROLE_ADMIN') %}
    <div class="alert alert-warning mb-3">
      Vous êtes connecté en tant qu’<strong>Administrateur</strong>.
    </div>
  {% endif %}

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 m-0">Dashboard Admin</h1>
  </div>

  <p class="text-muted mb-4">
  Bienvenue {{ app.user ? (app.user.name ?? app.user.email) : 'invité·e' }}
  </p>

  <div class="row g-3">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title mb-2">Produits</h5>
          <p class="text-muted small">Ajouter, modifier ou supprimer des articles de la boutique.</p>
          <a href="{{ path('admin_product_list') }}" class="btn btn-primary btn-sm">
            Gérer les produits
          </a>
        </div>
      </div>
    </div>

    {# Placeholders pour d'autres blocs (commandes, clients, etc.) #}
