{# templates/admin/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion Admin{% endblock %}

{% block body %}
<div class="container" style="max-width: 520px">
  <h1 class="mt-4 mb-3">Connexion Administrateur</h1>

  {% if error %}
    <div class="alert alert-danger">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
  {% endif %}

  <form method="post" action="{{ path('admin_login') }}" class="mt-3">
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        value="{{ last_username }}"
        required
        autofocus
        autocomplete="username"
      >
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Mot de passe</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
        required
        autocomplete="current-password"
      >
    </div>

    {# CSRF (doit correspondre à csrf_token_id: authenticate dans security.yaml) #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {# Optionnel: remember_me. Laisse coché si tu veux. #}
    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" checked>
      <label class="form-check-label" for="remember_me">Rester connecté</label>
    </div>

    <button class="btn btn-primary w-100" type="submit">Se connecter</button>
  </form>

  <p class="mt-3">
    Pas encore de compte ?
    <a href="{{ path('admin_register') }}">Créer un compte admin</a>
  </p>

  <div class="text-center mt-2">
    <a href="/" class="text-muted small">← Retour au site</a>
  </div>
</div>
{% endblock %}