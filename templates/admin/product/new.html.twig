{# templates/admin/product/new.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}Nouveau produit{% endblock %}

{% block body %}
<div class="container py-3" style="max-width:720px">
  <h1 class="h4">Créer un produit</h1>

  {{ form_start(form) }}
    <div class="mb-3">{{ form_row(form.name) }}</div>
    <div class="mb-3">{{ form_row(form.description) }}</div>
    <div class="mb-3">{{ form_row(form.price) }}</div>
    <div class="mb-3">{{ form_row(form.highlighted) }}</div>

    {# Upload image #}
    <div class="mb-3">{{ form_row(form.imageFile) }}</div>

    <div class="row g-3">
      <div class="col-sm-3">{{ form_row(form.sizeS) }}</div>
      <div class="col-sm-3">{{ form_row(form.sizeM) }}</div>
      <div class="col-sm-3">{{ form_row(form.sizeL) }}</div>
      <div class="col-sm-3">{{ form_row(form.sizeXl) }}</div>
    </div>

    <button class="btn btn-success mt-3">Créer</button>
    <a href="{{ path('admin_product_new') }}" class="btn btn-link mt-3">Retour</a>
  {{ form_end(form) }}
</div>
{% endblock %}