{% extends 'base.html.twig' %}
{% block title %}Créer un compte Admin{% endblock %}
{% block body %}
<div class="container" style="max-width:480px">
  <h1>Créer un compte Admin</h1>

  {% for type, msgs in app.flashes %}
    {% for m in msgs %}
      <div class="alert alert-{{ type }}">{{ m }}</div>
    {% endfor %}
  {% endfor %}

  <form method="post">
    <label>Nom</label>
    <input type="text" name="name" class="form-control">

    <label class="mt-2">Email</label>
    <input type="email" name="email" required class="form-control">

    <label class="mt-2">Mot de passe</label>
    <input type="password" name="password" required class="form-control">

    <button class="btn btn-success mt-3" type="submit">Créer</button>
    <a class="btn btn-link" href="{{ path('admin_login') }}">Déjà un compte ?</a>
  </form>
</div>
{% endblock %}