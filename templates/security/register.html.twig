{# templates/admin/security/register.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="card shadow-sm mx-auto" style="max-width: 420px;">
    <div class="card-body">

      <h1 class="h5 mb-3">S’inscrire</h1>

      {{ form_start(registrationForm, { attr: { novalidate: 'novalidate' } }) }}

      {{ form_row(registrationForm.name,            { label: 'Nom utilisateur :' }) }}
      {{ form_row(registrationForm.email,           { label: 'Adresse mail :' }) }}
      {{ form_row(registrationForm.deliveryAddress, { label: 'Adresse de livraison :' }) }}

      {{ form_row(registrationForm.plainPassword.first,  { label: 'Mot de passe :' }) }}
      {{ form_row(registrationForm.plainPassword.second, { label: 'Confirmer le mot de passe :' }) }}

      <div class="mb-3">
        {{ form_row(registrationForm.agreeTerms, { label: "J'accepte les CGU" }) }}
      </div>

      <div class="d-grid mb-2">
        <button type="submit" class="btn btn-primary btn-lg">Créer un compte</button>
      </div>

      {{ form_end(registrationForm) }}

      <hr class="my-3">
      <div class="text-center">
        <span class="small text-muted d-block mb-2">Déjà inscrit ?</span>
        <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm">Se connecter</a>
      </div>

    </div>
  </div>
</div>
{% endblock %}