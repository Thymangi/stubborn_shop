{# templates/security/profile.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="card shadow-sm mx-auto" style="max-width: 520px;">
    <div class="card-body p-4">
      <h1 class="h5 mb-3">Mon profil</h1>
      <dl class="row mb-0">
        <dt class="col-4 text-muted">Email</dt>
        <dd class="col-8">{{ user.email }}</dd>
        <dt class="col-4 text-muted">Nom affiché</dt>
        <dd class="col-8">{{ user.name ?: '—' }}</dd>
      </dl>

      <div class="d-grid mt-3">
        <a class="btn btn-outline-primary" href="{{ path('profile_edit') }}">Modifier mon profil</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}