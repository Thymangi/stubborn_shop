{# templates/User/profile_edit.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container">
  <h1 class="mb-4">Modifier mon profil</h1>

  {% for type, messages in app.flashes %}
    {% for msg in messages %}
      <div class="alert alert-{{ type }}">{{ msg }}</div>
    {% endfor %}
  {% endfor %}

  {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
    <div class="col-12 col-md-6">
      {{ form_label(form.name) }}
      {{ form_widget(form.name, {'attr': {'class':'form-control'}}) }}
      {{ form_errors(form.name) }}
    </div>
    
    <div class="col-12">
      {{ form_label(form.deliveryAddress) }}
      {{ form_widget(form.deliveryAddress, {'attr': {'class':'form-control'}}) }}
      {{ form_errors(form.deliveryAddress) }}
    </div>

    <div class="col-12 col-md-6">
    {{ form_label(form.email) }}
    {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
    {{ form_errors(form.email) }}
    </div>

    <div class="col-12">
      <button class="btn btn-primary">Enregistrer</button>
      <a class="btn btn-outline-secondary" href="{{ path('user_profile') }}">Annuler</a>
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}