{# templates/User/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Mon profil</h1>

    {% if app.user %}
        <div class="card">
            <div class="card-body">
                <p><strong>Nom :</strong> {{ app.user.name ?? '—' }}</p>
                <p><strong>Email :</strong> {{ app.user.email ?? '—' }}</p>
                 <p><strong>Adresse de livraison :</strong> {{ app.user.deliveryAddress ?? '—' }}</p>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning">Vous devez être connecté pour voir cette page.</div>
    {% endif %}
</div>
{% endblock %}