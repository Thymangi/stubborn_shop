{# product: id, name, price, image #}
<div class="card shadow-sm h-100">
  <div class="ratio ratio-4x3 bg-light">
    <img src="{{ asset(product.image ?? 'assets/img/placeholder.png') }}"
         class="card-img-top object-fit-contain p-2" alt="{{ product.name }}">
  </div>
  <div class="card-body d-flex flex-column">
    <h3 class="h6 mb-2 text-truncate" title="{{ product.name }}">{{ product.name }}</h3>
    <div class="fw-bold mb-3">{{ product.price|number_format(2, ',', ' ') }} â‚¬</div>
    <a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-primary mt-auto">VOIR</a>
  </div>
</div>